<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="start"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:id="@+id/clickLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#000000"
                android:background="@drawable/flecha_izquierda"
                android:contentDescription="@string/anterior"
                android:onClick="onAnteriorClick"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitleVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/aclonica"
                    android:text="MAQUETA D'AVIÓ POLIKARPOV L-15 'XATO'"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="@drawable/line_background"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:gravity="end">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:fontFamily="@font/aclonica"
                android:padding="20dp"
                android:text="JUGAR"
                android:textSize="50sp"

                />

            <Spinner
                android:id="@+id/spinnerIdiomas1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:gravity="center_vertical"
                android:background="@drawable/spinner_idiomas"
                android:spinnerMode="dropdown"/>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aviacion2" />

            <ListView
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginTop="50dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Maquetaa escala 1:2 de l'avió d'origen soviètic,
molt maniobrable i amb gran velocitat d'ascens.
Va ser dissenyat per l'enginyer Nikolái Nikoláyevich
Polikárpovi l'any 1934 es va començar a produir
en sèrie.
A Espanya, va ser batejat amb el sobrenom de
'Xato' pel seu perfil curt, mentre que a lURSS era
conegut com a 'Chaika' (gavina). Durant la
Guerra Civil Espanyola van destacar en la defensa
de Madrid i en les batalles del Jarama i de
Guadalajara. A les forces aèries de l'URSS, entre
1938i 1939, van operar
contra els japonesos i del
1939 al 1940 van tenir
una actuació destacada
a Finlàndia."
                android:textSize="40sp"
                android:padding="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>